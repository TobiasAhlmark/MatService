@using FoodOnDelivery.Core.Entities;
@model Order

<!DOCTYPE html>
<html lang="sv">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Orderbekräftelse</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container my-5">
    <h1>Tack för din beställning!</h1>
    <p>Ditt ordernummer är: @Model.Id</p>
    
    <h2>Orderdetaljer</h2>
    <p>Total summa: @Model.TotalPrice.ToString("c")</p>
    
    <h3>Kundinformation</h3>
    <p>Namn: @Model.Customer.Name</p>
    <p>Telefon: @Model.Customer.PhoneNumber</p>
    <p>Adress: @Model.Customer.Address</p>
    
    <h3>Produkter</h3>
    <table class="table table-bordered">
      <thead class="thead-light">
        <tr>
          <th>Produkt</th>
          <th>Antal</th>
          <th>Pris per enhet</th>
          <th>Summa</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var item in Model.OrderItems)
        {
          <tr>
            <td>@item.MenuItem.Name</td>
            <td>@item.Quantity</td>
            <td>@item.PriceAtOrderTime.ToString("c")</td>
            <td>@(item.Quantity * item.PriceAtOrderTime).ToString("c")</td>
          </tr>
        }
      </tbody>
    </table>
  </div>
</body>
</html>
