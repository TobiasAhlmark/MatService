@using FoodOnDelivery.Core.Entities;
@model Menu

@{
    ViewData["Title"] = "Skapa ny meny";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    @* Anti-forgery token säkerställer att posten är giltig *@
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RestaurantId" class="control-label"></label>
        <input asp-for="RestaurantId" class="form-control" />
        <span asp-validation-for="RestaurantId" class="text-danger"></span>
    </div>

    @* Om du vill lägga till Items direkt vid skapande kan du hantera det separat,
       eftersom det ofta är en egen process (CRUD för menyobjekt) *@

    <button type="submit" class="btn btn-primary">Skapa meny</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
